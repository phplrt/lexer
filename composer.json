{
    "name": "phplrt/lexer",
    "type": "library",
    "description": "The phplrt lexer library that can be used for scanners implementation using PCRE",
    "license": "MIT",
    "keywords": ["regex", "lexer", "token", "stream", "parsing", "scanner", "tokenizer"],
    "homepage": "https://github.com/phplrt",
    "support": {
        "issues": "https://github.com/phplrt/phplrt/issues",
        "source": "https://github.com/phplrt/lexer"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-spl": "*",
        "ext-pcre": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "phplrt/lexer-contracts": "^4.0",
        "phplrt/lexer-printer": "^4.0",
        "phplrt/source-contracts": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Phplrt\\Lexer\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5|^11.0",
        "vimeo/psalm": "^5.21"
    },
    "autoload-dev": {
        "psr-4": {
            "Phplrt\\Lexer\\Tests\\": "tests"
        }
    },
    "provide": {
        "phplrt/lexer-contracts-implementation": "^4.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.x-dev",
            "dev-main": "4.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
