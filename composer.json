{
    "name": "phplrt/lexer",
    "type": "library",
    "description": "The phplrt lexer library that can be used for scanners implementation using PCRE",
    "license": "MIT",
    "keywords": ["regex", "lexer", "token", "stream", "parsing", "scanner", "tokenizer"],
    "homepage": "https://github.com/phplrt",
    "support": {
        "issues": "https://github.com/phplrt/phplrt/issues",
        "source": "https://github.com/phplrt/lexer"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-spl": "*",
        "ext-pcre": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "phplrt/source": "^3.0",
        "phplrt/lexer-contracts": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Phplrt\\Lexer\\": "src"
        }
    },
    "provide": {
        "phplrt/lexer-contracts-implementation": "~2.3"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
