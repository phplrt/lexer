{
    "name": "phplrt/lexer",
    "type": "library",
    "description": "The phplrt lexer library that can be used for scanners implementation using PCRE",
    "license": "MIT",
    "keywords": [
        "regex",
        "lexer",
        "token",
        "stream",
        "parsing",
        "scanner",
        "tokenizer"
    ],
    "homepage": "https://github.com/phplrt",
    "support": {
        "issues": "https://github.com/phplrt/phplrt/issues",
        "source": "https://github.com/phplrt/lexer"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-spl": "*",
        "ext-pcre": "*",
        "ext-mbstring": "*",
        "symfony/polyfill-php73": "~1.12",
        "phplrt/lexer-contracts": "~2.0|2.0.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Phplrt\\Lexer\\": "./"
        }
    },
    "provide": {
        "phplrt/lexer-contracts-implementation": "2.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
